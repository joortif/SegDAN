{
    "dataset_path": "C:/Users/joortif/Desktop/datasets/Completos/melanoma_3c/train",  
    "output_path": "C:/Users/joortif/Desktop/Resultados_SegDAN/melanoma_c3",


    "analyze": true,

    
    "cluster_images": true,
    "embedding_frameworks": ["huggingface", "pytorch", "tensorflow", "opencv"], 
    "models_huggingface": ["openai/clip-vit-base-patch16"],
    "models_pytorch": ["resnet50"],
    "models_tensorflow": ["MobileNetV2"],
    
    "resize_height": 224,
    "resize_width": 224,
    "lbp_radius": 16,
    "lbp_num_points": 48,
    "lbp_method": "uniform", 

    "clustering_models": {
        "kmeans": {
            "n_clusters": 5,  
            "random_state": 123
        },
        "agglomerative": {
            "n_clusters": 5,  
            "linkage": "ward" 
        },
        "dbscan": {
            "eps_range": {
                "min": 0.1,
                "max": 0.5,
                "step": 0.1
            },
            "min_samples_range": {
                "min": 5,
                "max": 20,
                "step": 1
            }
        },
        "optics": {
            "min_samples": 5
        }
    },

    "clustering_metric": "calinski",
    "plot": true,
    "visualization_method": "pca",

    "reduction": true,
    "reduction_percentage": 0.7,
    "reduction_type": "representative",
    "diverse_percentage": 0.0,
    "reduction_model": {
        "kmeans": {
            "n_clusters": 5,  
            "random_state": 123
        }
    },

    "depth_model": "Intel/dpt-swinv2-tiny-256",
    "threshold": 255,
    "color_dict": {"[0,0,255]": 1,
                   "[0,255,0]": 2},

    "split_percentages": {
        "train": 0.7,
        "valid": 0.2,
        "test": 0.1
    },
    "stratification": true,
    "stratification_type": "pixels", 

    "segmentation": "semantic",
    "models": "unet",
    "segmentation_metric": "dice_score",
    "batch_size": 8,
    "epochs": 100,
    "background": 3,
    "verbose": true
}